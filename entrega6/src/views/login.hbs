<main class="container">
  <h1>Login</h1>
  {{#if error}}
    <div class="alert alert-danger" role="alert">
      {{error}}
    </div>
  {{/if}}
  <form action="/api/sessions/login" method="POST" class="form-group w-50">
    <div class="container">
      <label>Email</label>
      <input
        type="email"
        name="email"
        placeholder="Ingresa tu mail ejemplo@mail.com"
        class="form-control"
      />
      <label>password</label>
      <input
        type="text"
        name="password"
        placeholder="Ingresa tu contraseña"
        class="form-control"
      />
      <button
        type="submit"
        id="logInBtn"
        class="btn btn-outline-dark w-100 mt-3"
      >Login</button>
    </div>
    <div class="container mt-3">
      <label>¿No tienes usuario?</label>
      <button
        type="button"
        id="registerBtn"
        class="btn btn-outline-dark w-100 mt-3"
      >Registrate</button>
    </div>
  </form>
</main>
<script async src="/js/login.js"></script>